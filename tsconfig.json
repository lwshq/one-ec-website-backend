{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2016",
      "forceConsistentCasingInFileNames": true,    
      "noImplicitAny": true,
      "skipLibCheck": true ,
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true, 
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      }
  },
  "include": ["./src/**/*"]
  }
